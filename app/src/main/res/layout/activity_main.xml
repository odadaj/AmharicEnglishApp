<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context="com.example.odadaj.amharicenglishkidstutor.MainActivity" android:id="@+id/coordinatorLayout">


    <ImageView
            android:contentDescription="@string/lindabrand"
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/starchild"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <ImageView
            android:contentDescription="@string/lindabrand"
            android:id="@+id/fab2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:visibility="invisible"
            android:src="@drawable/abcd"
            app:layout_constraintEnd_toStartOf="@+id/fab1"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.42"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"/>

    <ImageView
            android:contentDescription="@string/lindabrand"
            android:id="@+id/fab1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:visibility="invisible"
            android:src="@drawable/quiz"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"/>

    <ImageView
            android:contentDescription="@string/lindabrand"
            android:id="@+id/fab3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            android:src="@drawable/n123"
            app:layout_constraintStart_toEndOf="@+id/fab1"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"/>

    <TextView
            android:id="@+id/starStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/starStart"
            android:textColor="@color/colorKuraBlue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>

    <TextView
            android:id="@+id/tvLatlong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lindabrand"
            android:textColor="@color/colorKuraRed"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <TextView
            android:id="@+id/lindaslogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lindaslogan"
            android:textColor="@color/colorSlogan"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tvLatlong"/>


</android.support.constraint.ConstraintLayout>
